---
import { PersonInfo } from "types/PersonInfo";

export interface Props {
	editedTime?: string;
	publishedTime?: string;
	keywords?: string[];
	peopleData?: PersonInfo[];
}
const { keywords, editedTime, publishedTime, peopleData } = Astro.props;
const author = peopleData?.map((uni) => uni.name)?.join(",");
---

{keywords?.map((keyword) => <meta property="article:tag" content={keyword} />)}
<meta property="article:section" content="Technology" />
{author && <meta property="article:author" content={author} />}
{editedTime && <meta property="article:modified_time" content={editedTime} />}
{
	publishedTime && (
		<meta property="article:published_time" content={publishedTime} />
	)
}
